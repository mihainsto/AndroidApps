<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="login_on_style">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/login</item>
    </style>

    <style name="login_off_style">
        <item name="android:layout_width">138dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@drawable/sign_up</item>
    </style>

    <style name="signup_on_style">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/singupsinguppage</item>
    </style>

    <style name="signup_off_style">
        <item name="android:layout_width">138dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@drawable/loginsinguppage</item>
    </style>
</resources>
